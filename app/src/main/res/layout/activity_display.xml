<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Display">


    <TextView
        android:id="@+id/textViewname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:textColor="#B20DED"
        android:ems="10"
        android:text="Your Name:" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="40dp"
        android:textColor="#B20DED"
        android:ems="10"
        android:text="name"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true" />

    <TextView
        android:id="@+id/textViewaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:textColor="#B20DED"
        android:layout_alignStart="@+id/textViewname"
        android:layout_alignLeft="@+id/textViewname"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:text="Your Address:" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#B20DED"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Type your Address"
        android:text="address"
        />

    <TextView
        android:id="@+id/textViewproffession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:textColor="#B20DED"
        android:layout_alignStart="@+id/textViewaddress"
        android:layout_alignLeft="@+id/textViewaddress"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:text="Your Proffession:" />

    <TextView
        android:id="@+id/proffession"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_alignStart="@+id/address"
        android:layout_alignLeft="@+id/address"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="text"
        android:text="proffession"
        android:textColor="#B20DED" />

    <TextView
        android:id="@+id/textViewdream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewproffession"
        android:layout_alignStart="@+id/textViewproffession"
        android:textColor="#B20DED"
        android:layout_alignLeft="@+id/textViewproffession"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:text="Your DreamJob:" />

    <TextView
        android:id="@+id/dreamjob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/proffession"
        android:layout_alignStart="@+id/proffession"
        android:textColor="#B20DED"
        android:layout_alignLeft="@+id/proffession"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:text="dreamjob"
        />

    <TextView
        android:id="@+id/favorfood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewdream"
        android:textColor="#B20DED"
        android:layout_alignStart="@+id/textViewdream"
        android:layout_alignLeft="@+id/textViewdream"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:text="Your Favorite Food:" />

    <TextView
        android:id="@+id/favoritefood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#B20DED"
        android:layout_below="@+id/dreamjob"
        android:layout_alignStart="@+id/dreamjob"
        android:layout_alignLeft="@+id/dreamjob"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:text="favoritefood"
        />



</RelativeLayout>
